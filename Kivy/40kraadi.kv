#: kivy 1.8.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
# File name: 40kraadi.kv
#:import get_color_from_hex kivy.utils.get_color_from_hex
#: import random random

ScreenManagement:
    transition: FadeTransition()
    EsimeneLehekulg:
    Mang:
    Abi:


<EsimeneLehekulg>:
    name: 'esimenelk'
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            canvas.before:
                BorderImage:
                    source: 'pealkirii.png'
                    pos: self.pos
                    size: self.size

        FloatLayout:
            Button:
                pos_hint: {'x':0.4,'y': 0.1}
                size_hint: 0.23,0.002
                size_hint_y: None
                background_normal: 'nupp.png'
                background_down:'nupp.png'
                on_release: app.root.current = "mang"
                allow_stretch: True
                keep_ratio: True
                border: (3, 3, 3, 3)

        FloatLayout:
            Button:
                pos_hint: {'x':0,'y':0}
                text: 'Abi'
                size_hint: 0.2,0.1
                on_release: app.root.current = 'abi'
            Button:
                text: 'Välja'
                pos_hint: {'right':1,'y':0}
                size_hint: 0.2,0.1
                on_release: app.stop()


<Mang>:
    name: 'mang'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.uus_tegevus
            text_color: 0,0,0,0
            font_size: 24
            font_name: 'Arial'
            bold: True
            italic: True
            shorten: True
            shorten_from: 'right'
            split_str: ''

        Button:
            pos_hint: {'x':0.35,'y':0.5}
            size_hint: 0.3,0.2
            text: 'JOON'
            on_press: root.popupvalja2()
            on_release: root.Muuda_Tegevust()
        FloatLayout:
            Button:
                pos_hint: {'x':0.35,'y':0.5}
                size_hint: 0.3,0.2
                text: 'TEEN'
                on_press: root.popupvalja1()
                on_release: root.Muuda_Tegevust()


<Abi>:
    name: 'abi'
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            Label:
                text: 'Varu piisavas koguses alkoholi ja naudi mängu!'
                background_color: 0,1,0,1
        FloatLayout:
            Button:
                text: 'tagasi'
                pos_hint: {'x':0.35,'y':0.1}
                size_hint: 0.3,0.2
                on_release: app.root.current = 'esimenelk'


<Popup1>:
    name: 'pop1'
    title: 'Õnnitlus'
    size_hint: .8,0.8
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Väga hea'
        Button:
            text: 'Edasi'
            on_press: root.dismiss()
<Popup2>:
    name: 'pop2'
    title: 'Kaebus'
    size_hint: 0.8,.8
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Argpüks'
        BoxLayout:

            Button:
                text: 'Edasi'
                on_press: root.dismiss()









		
	
	
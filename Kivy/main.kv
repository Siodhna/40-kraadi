#: kivy 1.8.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
# File name: main.kv
#:import C kivy.utils.get_color_from_hex
#: import random random

<Nupp@Button>:
    size_hint: 0.5,0.2
    background_normal: 'nupp1.png'
    background_down:'nupp2.png'
    markup: True
    border: (2,2,2,2)
<Nupp2@Button>:
    size_hint: 0.2,0.17
    background_normal: 'nupp1.png'
    background_down:'nupp2.png'
    markup: True
    border: (2,2,2,2)


ScreenManagement:
    transition: FadeTransition()
    id: scr
    name: 'scr'
    EsimeneLehekulg:
    Mang:
    Abi:


<EsimeneLehekulg>:
    name: 'esimenelk'
    BoxLayout:

        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'

            Label:
                markup: True
                text:
                    ('[font=capture][size=200]'
                    '40 kRAADI[/size][/font] ')

        BoxLayout:
            padding: (20,20,20,20)
            orientation: 'vertical'

            Nupp:
                pos_hint: {'x': 0.25, 'y':0.5}
                on_release: app.root.current = "mang"
                text:
                    ('[font=Modern Pictograms][size=60]'
                    ' >[/size][/font]  [font=capture][size=30] [b] Mängi[/b][/size][/font]')
            Label:
                size_hint: 0.1,0.1

            Nupp:
                pos_hint: {'x': 0.25, 'y':0.3}
                text:
                    ('[font=Modern Pictograms][size=60]'
                    '?[/size][/font]  [font=capture][size=30] [b] Abi [/b][/size][/font]')
                on_release: app.root.current = 'abi'
            Label:
                size_hint: 0.1,0.1
            Nupp:
                text:
                    ('[font=Modern Pictograms][size=60]'
                    ' X[/size][/font]     [font=capture][size=30] [b]Välja[/b][/size][/font]')
                pos_hint: {'x': 0.25, 'y':0.1}
                on_release: app.stop()
            Label:
                size_hint: 0.2,0.3


<Mang>:
    name: 'mang'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: (20,150,20,20)
            orientation: 'horizontal'
            Label:
                text:
                    ('[font=santiago][size=150]'+root.uus_pilt+'[/size][/font][size=35][b]'+ root.uus_tegevus +'[/b][/size]')
                font_name: 'Roboto'
                halign:'center'
                valign: 'middle'
                shorten: True
                shorten_from: 'right'
                markup: True
        BoxLayout:
            orientation: 'horizontal'
            padding: (20,20,20,20)
            Label:
                size_hint: 0.1,0.2
            Nupp2:
                pos_hint: {'x':0.4,'y':0.5}
                text:
                    ('[font=Modern Pictograms][size=45]'
                    'X[/size][/font]    [font=capture][size=30] [b]Joon[/b][/size][/font]')
                on_release: root.popupvalja2()
                on_press: root.muuda_tegevust()

            Label:
                size_hint: 0.1,0.5
            Nupp2:
                pos_hint: {'x':0.4,'y':0.5}
                text:
                    ('[font=Modern Pictograms][size=45]'
                    '%[/size][/font] [font=capture][size=30] [b]Teen[/b][/size][/font]')
                on_release: root.popupvalja1()
                on_press: root.muuda_tegevust()
            Label:
                size_hint: 0.1,0.5


<Abi>:
    name: 'abi'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'

            Label:
                size_hint: 0.7,1
                pos_hint: {'x': 0.15,'y':0.3}
                text: '[b] Teretulemast mängu 40 kraadi!\n Tegemist on rakendusega, \n mis aitab peo käima lükata. \n Varu piisavas koguses alkoholi ja naudi mängu! \n Alla 18-aastastele keelatud! [/b]'
                font_name: 'Roboto'
                valign: 'middle'
                halign: 'center'
                background_color: 0,1,0,1
                markup: True

        BoxLayout:
            padding: (20,20,20,20)
            orientation: 'vertical'

            Nupp:
                pos_hint: {'x': 0.25, 'y':0.5}
                on_release: app.root.current = "esimenelk"
                text:
                    ('[font=Modern Pictograms][size=45]'
                    'R[/size][/font]   [font=capture][size=30] [b]Tagasi[/b][/size][/font]')
            Label:
                size_hint_y: None
                size_hint: 0.2,1


<Popup1>:
    name: 'pop1'
    markup: True
    title: 'Õnnitlus'
    size_hint: .8,.6
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            text:
                ('[font=Modern Pictograms][size=90]'
                'l[/size][/font]\n '+ root.onnitlus)
        Nupp:
            text:
                ('[font=Modern Pictograms][size=45]'
                '>[/size][/font] [font=capture][size=30] [b]Edasi[/b][/size][/font]')
            on_press: root.dismiss()
            pos_hint: {'x':0.25,'y':0.4}


<Popup2>:
    markup: True
    name: 'pop2'
    title: 'Kaebus'
    size_hint: .8,.6
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            markup: True
            text:
                ('[font=Modern Pictograms][size=90]'
                'L[/size][/font]\n  '+root.kaebus)

        Nupp:
            text:
                ('[font=Modern Pictograms][size=45]'
                '>[/size][/font] [font=capture][size=30] [b]Edasi[/b][/size][/font]')
            on_press: root.dismiss()
            pos_hint: {'x':0.25,'y':0.6}









		
	
	